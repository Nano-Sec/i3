general {
    interval 		= 1
    colors 			= true
    color_good      = '#88b090'
    color_degraded  = '#ccdc90'
    color_bad       = '#e89393'
}

order += "cpu_usage 0"
order += "tztime local"

tztime local {
    format = "%A %e.%B  %I:%M:%S"
}

cpu_usage {
    format = " %usage"
}



